FROM node:alpine
WORKDIR /mydir
ENV FRONT_URL=http://localhost:80
COPY . ./
EXPOSE 8000
RUN apk add --update curl python ca-certificates && \
           apk --no-cache add curl  && \
           apk add --update nodejs nodejs-npm && \
           npm install && \
           apk del curl && \ 
           rm -rf /var/lib/apt/lists/* 
CMD npm start






