FROM node
WORKDIR /mydir
ENV FRONT_URL=http://localhost:80
COPY . .
EXPOSE 8000
RUN apt-get update && apt-get install -y curl python && \
curl -sL https://deb.nodesource.com/setup_10.x | bash && \
apt install -y nodejs && \
npm install && \
addgroup matilainen && \
useradd -m mika && \
usermod -a -G matilainen mika && \
chown -R mika:matilainen ./
USER mika
CMD npm start
